<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_holidays.hr_holidays_stress_day_menu_configuration" model="ir.ui.menu">
        <field name="name">Mandatory Days</field>
    </record>

    <record id="hr_holidays.hr_leave_stress_day_action" model="ir.actions.act_window">
        <field name="name">Mandatory Days</field>
    </record>

    <!-- ============================================================
     Mandatory Day Tree View Inheritance
     Adds Employees field as tags in the Mandatory Days list view
    ============================================================ -->

    <record id="view_holiday_mandatory_day_tree_inherit" model="ir.ui.view">
        <field name="name">hr.leave.mandatory.day.tree.inherit</field>
        <field name="model">hr.leave.stress.day</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_stress_day_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="employees" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

</odoo>


